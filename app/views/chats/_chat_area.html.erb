<div class="left-button">
  <h4 class="rooms-title"><%=  %>とのチャット</h4>
  <% @user_rooms.each do |ur| %>
    <%= link_to user_path(ur.user), class: "user_#{ur.user.id}" do %>
      <%= attachment_image_tag(ur.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
      <%= ur.user.name %>さん
    <% end %>
  <% end %>
</div>

<hr>
<div>
  <% if @chats.present? %>
    <% @chats.each do |chat| %>
      <%= attachment_image_tag chat.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %><br>
      <%= chat.user.name %><br>
      <%= chat.message %><br>
      <%= chat.created_at.strftime("%Y-%m-%d %H:%M") %>
    <% end %>
  <% end %>
</div>

